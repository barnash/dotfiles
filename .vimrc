set expandtab
set tabstop=4
set shiftwidth=4
set bg=dark
set hls
syntax enable

set backupdir=~/.vim-tmp,~/.tmp,~/tmp,/var/tmp,/tmp
set directory=~/.vim-tmp,~/.tmp,~/tmp,/var/tmp,/tmp

set wildmode=longest,list,full
set wildmenu

set backspace=2 " make backspace work like most other apps

set hidden
